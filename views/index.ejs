<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
<script type="text/javascript">
    $(function () {
        var pdfVue = new Vue({
            el: '#search_list',
            data: {
                pdfs: [],
                Tval: "",
                page: 2,
                more: "更多"
            },
            methods: {
                getPfd: function () {
                    //.....
                    $.ajax({
                        url: 'http://120.27.19.17:3005/api/getPdf',
                        type: 'get',
                        dataType: 'json',
                        success: function (res) {
                            if (res.res) {
                                this.pdfs = res.data;
                            }

                        }.bind(this)
                    })

                },
                searchPdf: function () {
                    this.Tval = $("#search_text").val();
                    this.page = 2;
                    $.ajax({
                        url: 'http://120.27.19.17:3005/api/getPdf?value=' + this.Tval,
                        type: 'get',
                        dataType: 'json',
                        success: function (res) {
                            if (res.res) {
                                this.pdfs = res.data;
                            }
                        }.bind(this)
                    })
                },
                loadMore: function () {
                    $.ajax({
                        url: 'http://120.27.19.17:3005/api/getPdf?value=' + this.Tval + '&page=' + this.page,
                        type: 'get',
                        dataType: 'json',
                        success: function (res) {
                            if (res.res) {
                                if (res.data.length > 0) {
//				  						console.log(res.data.lenght)
                                    this.page += 1;
                                    var that = this;
                                    res.data.forEach(function (pdf) {
                                        that.pdfs.push(pdf);
                                    })
                                } else {
                                    this.more = "没有更多";
                                }
                            }
                        }.bind(this)
                    })
                }
            }
        });

        pdfVue.getPfd();			  //loadMore

        $(document).on('click', '#loadMoreh_btn', function () {
            pdfVue.loadMore();
        });

        $("#search_text").keypress(function (event) {
            if (event.keyCode == 13) {
                pdfVue.searchPdf();
                searchResults();
                highlightResults();
            }
        });

        $(document).on('click', ".search_button", function () {
            pdfVue.searchPdf();
            searchResults();
            highlightResults();

        });


        searchResults = function () {
            var Tval = $("#search_text").val();
            if (Tval.length > 0) {
                $('#ser-wrods').css('display', 'block');
            } else {
                $('#ser-wrods').css('display', 'none');
                // $('.ov_f').unhighlight(Tval);
            }
        };


        highlightResults = function () {
            var Tval = $("#search_text").val();
            $('.ov_f').unhighlight(Tval);
            $('.ov_f').highlight($("#search_text").val());
        }


